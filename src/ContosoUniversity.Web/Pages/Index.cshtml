@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="carouselPhotos" class="container-fluid carousel slide bg-inverse w-90 ml-auto mr-auto" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselPhotos" data-slide-to="0" class="active"></li>
        <li data-target="#carouselPhotos" data-slide-to="1"></li>
        <li data-target="#carouselPhotos" data-slide-to="2"></li>
        <li data-target="#carouselPhotos" data-slide-to="3"></li>
        <li data-target="#carouselPhotos" data-slide-to="4"></li>
    </ol>

    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img class="d-block w-100" src="images/school01.png" alt="SPSU campus view 1">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/school02.png" alt="SPSU campus view 2">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/school03.png" alt="SPSU campus view 3">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/school04.png" alt="SPSU campus view 4">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/school06.png" alt="SPSU campus view 5">
        </div>
    </div>

    <a class="carousel-control-prev" href="#carouselPhotos" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselPhotos" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h2>Welcome to SPSU</h2>
        <p>
            Sir Padampat Singhania University (SPSU) is a leading private university established by JK Cement Group.
            This web application demonstrates how SPSU incorporates cutting-edge software development practices into
            its curriculum, including ASP.NET Core Razor Pages, Entity Framework Core, Clean Architecture, and SOLID principles.
        </p>
        <p>
            Explore more about our technology programs and academic initiatives at
            <a href="https://spsu.ac.in" target="_blank">spsu.ac.in</a>.
        </p>
    </div>
</div>
