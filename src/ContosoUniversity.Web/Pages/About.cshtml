@page
@model AboutModel
@{
    ViewData["Title"] = "Student Enrollment Statistics - SPSU";
}

<h2>Student Enrollment Statistics</h2>

<p>
    This section presents enrollment trends at <strong>Sir Padampat Singhania University (SPSU)</strong>, reflecting the growth and diversity of our student body across various programs and years.
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Enrollment Date</th>
            <th>Number of Students</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.StudentTotals)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.EnrollmentDate)</td>
                <td>@item.StudentCount</td>
            </tr>
        }
    </tbody>
</table>
